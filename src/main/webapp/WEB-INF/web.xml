<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>HelloWord</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  		<servlet-name>ApiServlet</servlet-name>
        <servlet-class>be.info.ApiServlet</servlet-class>
        <init-param>
            <param-name>api-key</param-name>
            <param-value>12345</param-value>
        </init-param>
  </servlet>
  <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/ApiServlet</url-pattern>
    </servlet-mapping>
</web-app>